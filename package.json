{
  "name": "product-catalog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "postinstall": "npm run type-check || true",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint",
    "clean": "rm -rf .next out",
    "export": "next export",
    "build:netlify": "npm ci && next build",
    "serve": "npx serve@latest out",
    "test:build": "npm run build && npm run start &",
    "precommit": "npm run validate",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "migrate:supabase": "node scripts/migrate-to-supabase.js",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.3",
    "debug": "^4.4.1",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-confirm-alert": "^3.0.6",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@netlify/plugin-nextjs": "^5.13.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "typescript": "5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
